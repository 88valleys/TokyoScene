<div class="container p-3">
<h3> Your Upcoming Events </h3>

<div class="d-flex flex-column justify-content-center align-items-center">
<% @user.registrations.each do |registration| %>

<div class="upcoming-events-card">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="upcoming-events-card-infos">
    <h2> <%= registration.gig.name %></h2>
    <p><%= registration.gig.time %></p>
    <p><%= registration.gig.location %></p>
    <p><%= registration.status %></p>
  </div>
</div>
<% end %>
</div>




<h3> My Favorite Genres </h3>
<% @user.genre_list.each do |genre| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <%= genre %>
    <%= button_to 'Remove', remove_genre_user_path(@user, user: @user, genre: genre), method: :patch, class: 'btn btn-danger' %>
  </div>
<% end %>


<h1>Edit Your Genres</h1>

<%= simple_form_for @user, url: user_path(@user), method: :patch do |f| %>
  <div class="form-group">
    <%= f.input :genres, as: :text, label: 'Favorite Genres', input_html: { value: @user.genre_list.join(', ') } %>
  </div>

  <%= f.submit 'Update Genres', class: 'btn btn-primary' %>
<% end %>

<h1>Add New Genre</h1>
<%= simple_form_for :genre, url: add_genre_user_path(@user), method: :patch do |f| %>
  <%= f.input :name, as: :string, label: 'New Genre' %>
  <%= f.submit 'Add Genre', class: 'btn btn-success' %>
<% end %>


