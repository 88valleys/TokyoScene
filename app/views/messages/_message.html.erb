<div id="message-<%= message.id %>">
  <small>
    <% if message.user.profile_pic.attached? %>
      <%= image_tag message.user.profile_pic.variant(resize_to_fill: [50, 50]), class: "profile-pic" %>
    <% end %>
    <div class="message-info">
      <strong><%= message.user.nickname %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </div>
  </small>
  <p><%= message.content %></p>
  </small>
</div>