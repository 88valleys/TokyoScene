
<!--Recommended button-->
<div class="dropdown">
  <%= button_to 'Recommended', root_path(recommend: true), method: :get, class: 'btn btn-secondary custom-dropdown-button' %>
</div>

<!--Filter-2 genre-->
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle custom-dropdown-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Genre
  </button>
  <ul class="dropdown-menu scrollable-dropdown">
    <% @genres.each do |genre| %>
      <li><a class="dropdown-item" href=<%="?genre=#{genre.name}"%>><%= genre %></a></li>
      <%end %>
    </ul>
  </div>

  <!--Filter-3 date-->
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle custom-dropdown-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Date
    </button>
    <ul class="dropdown-menu scrollable-dropdown">
      <li><a class="dropdown-item" href="?date_range=tonight">Tonight</a></li>
      <li><a class="dropdown-item" href="?date_range=this_weekend">This Weekend</a></li>
      <li><a class="dropdown-item" href="?date_range=this_month">This Month</a></li>
      <li><a class="dropdown-item" href="?date_range=next_month">Next Month</a></li>
    </ul>
  </div>


